<?xml version="1.0" encoding="utf-8" standalone="yes"?>

<?xml-stylesheet href="./_c74_ref.xsl" type="text/xsl"?>

<c74object name="cm.indexcloud~" module="msp" category="MSP Sampling">
	<digest>
		Indexed window polyphonic granular synthesizer
	</digest>
	<description>
		<o>cm.indexcloud~</o> by circuit.music.labs is a polyphonic granulator object for granulation of mono and stereo audio files loaded into a buffer~ object. It uses a windowing function calculated inside the external itself. The windowing functions can be accessed with and index number supplied as an argument or with a message.
	</description>
	<!--METADATA-->
	<metadatalist>
		<metadata name="author">
			circuit.music.labs
		</metadata>
		<metadata name="tag">
			Max
		</metadata>
		<metadata name="tag">
			MSP Sampling
		</metadata>
		<metadata name="reference">
			TEXT_HERE
		</metadata>
		<metadata name="license">
			TEXT_HERE
		</metadata>
	</metadatalist>
	<!--INLETS-->
	<inletlist>
		<inlet id="0" type="INLET_TYPE">
			<digest>
				trigger inlet
			</digest>
			<description>
				Signal inlet used for triggering new grains
			</description>
		</inlet>
		<inlet id="1" type="INLET_TYPE">
			<digest>
				min start position
			</digest>
			<description>
				Minimum start position value in ms
			</description>
		</inlet>
		<inlet id="2" type="INLET_TYPE">
			<digest>
				max start position
			</digest>
			<description>
				Maximum start position value in ms
			</description>
		</inlet>
		<inlet id="3" type="INLET_TYPE">
			<digest>
				min grain length
			</digest>
			<description>
				Minimum grain length in ms
			</description>
		</inlet>
		<inlet id="4" type="INLET_TYPE">
			<digest>
				max grain length
			</digest>
			<description>
				Maximum grain length in ms
			</description>
		</inlet>
		<inlet id="5" type="INLET_TYPE">
			<digest>
				min pitch
			</digest>
			<description>
				Minimum pitch value
			</description>
		</inlet>
		<inlet id="6" type="INLET_TYPE">
			<digest>
				max pitch
			</digest>
			<description>
				Maximum pitch value
			</description>
		</inlet>
		<inlet id="7" type="INLET_TYPE">
			<digest>
				min pan
			</digest>
			<description>
				Minimum pan value
			</description>
		</inlet>
		<inlet id="8" type="INLET_TYPE">
			<digest>
				max pan
			</digest>
			<description>
				Maximum pan value
			</description>
		</inlet>
		<inlet id="9" type="INLET_TYPE">
			<digest>
				min gain
			</digest>
			<description>
				Minimum gain value
			</description>
		</inlet>
		<inlet id="10" type="INLET_TYPE">
			<digest>
				max gain
			</digest>
			<description>
				Maximum gain value
			</description>
		</inlet>
	</inletlist>
	<!--OUTLETS-->
	<outletlist>
		<outlet id="0" type="OUTLET_TYPE">
			<digest>
				Signal output left
			</digest>
			<description>
			</description>
		</outlet>
		<outlet id="1" type="OUTLET_TYPE">
			<digest>
				Signal output right
			</digest>
			<description>
			</description>
		</outlet>
		<outlet id="2" type="OUTLET_TYPE">
			<digest>
				Number of currently playing grains
			</digest>
			<description>
			</description>
		</outlet>
	</outletlist>
	<!--ARGUMENTS-->
	<objarglist>
		<objarg name="sample" optional="0" type="symbol">
			<digest>
				Sample buffer reference
			</digest>
			<description>
				Name of the buffer used for playback.
			</description>
		</objarg>
		<objarg name="index" optional="0" type="int">
			<digest>
				Window buffer type
			</digest>
			<description>
				Index number of the desired window buffer. See the helpfile for a detailed specification.
			</description>
		</objarg>
		<objarg name="length" optional="0" type="int">
			<digest>
				Window buffer length
			</digest>
			<description>
				Length of the window buffer (in samples).
			</description>
		</objarg>
		<objarg name="cloud-size" optional="0" type="int">
			<digest>
				Maximum size of grain cloud
			</digest>
			<description>
				Maximum number of overlapping grains.
			</description>
		</objarg>
	</objarglist>
	<!--MESSAGES-->
	<methodlist>
		<method name="set">
			<arglist>
				<arg name="sample buffer" optional="0" type="symbol" />
			</arglist>
			<digest>
				Sets the buffer references
			</digest>
			<description>
				Specifies the sample buffer reference.
			</description>
		</method>
		<method name="cloudsize">
			<arglist>
				<arg name="grain cloud size" optional="0" type="int" />
			</arglist>
			<digest>
				Maximum size of grain cloud
			</digest>
			<description>
				Specifies the new maximum size of the grain cloud and resizes allocated memory. The supplied value must be a positive integer.
			</description>
		</method>
		<method name="w_type">
			<arglist>
				<arg name="index" optional="0" type="int" />
			</arglist>
			<digest>
				Sets the window type
			</digest>
			<description>
				Specifies the type of the window buffer. See the helpfile for a detailed specification of index values.
			</description>
		</method>
		<method name="w_length">
			<arglist>
				<arg name="length" optional="0" type="int" />
			</arglist>
			<digest>
				Sets the length of the window buffer.
			</digest>
			<description>
				Specifies the length of the window buffer in number of samples. Minimum value is 16 samples.
			</description>
		</method>
	</methodlist>
	<!--ATTRIBUTES-->
	<attributelist>
		<attribute name="stereo" get="0" set="1" type="int" size="1">
			<digest>
				Multi-channel playback on/off
			</digest>
			<description>
				Activates and deactivates stereo playback of multi-channel files loaded into the sample buffer.
			</description>
		</attribute>
		<attribute name="w_interp" get="0" set="1" type="int" size="1">
			<digest>
				Window interpolation on/off
			</digest>
			<description>
				Activates and deactivates window sample interpolation.
			</description>
		</attribute>
		<attribute name="s_interp" get="0" set="1" type="int" size="1">
			<digest>
				Sample interpolation on/off
			</digest>
			<description>
				Activates and deactivates buffer sample interpolation.
			</description>
		</attribute>
		<attribute name="zero" get="0" set="1" type="int" size="1">
			<digest>
				Zero crossing trigger mode on/off
			</digest>
			<description>
				Activates and deactivates zero crossing trigger mode.
			</description>
		</attribute>
	</attributelist>
	<misc name="Output">
		<entry name="signal outlet 1">
			<description>
				Signal outlet for left channel.
			</description>
		</entry>
		<entry name="signal outlet 2">
			<description>
				Signal outlet for right channel.
			</description>
		</entry>
		<entry name="current grain count">
			<description>
				Number of currently playing grains.
			</description>
		</entry>
	</misc>
</c74object>
