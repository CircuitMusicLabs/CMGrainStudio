<?xml version="1.0" encoding="utf-8" standalone="yes"?>

<?xml-stylesheet href="./_c74_ref.xsl" type="text/xsl"?>

<c74object name="cm.buffercloud~" module="msp" category="MSP Sampling">
	<digest>
		Buffer based window polyphonic granular synthesizer
	</digest>
	<description>
		<o>cm.buffercloud~</o> by circuit.music.labs is a polyphonic granulator object for granulation of mono and stereo audio files loaded into a buffer~ object. It uses a windowing function loaded into a buffer~ object.
	</description>
	<!--METADATA-->
	<metadatalist>
		<metadata name="author">
			circuit.music.labs
		</metadata>
		<metadata name="tag">
			Max
		</metadata>
		<metadata name="tag">
			MSP Sampling
		</metadata>
		<metadata name="reference">
			TEXT_HERE
		</metadata>
		<metadata name="license">
			TEXT_HERE
		</metadata>
	</metadatalist>
	<!--INLETS-->
	<inletlist>
		<inlet id="0" type="INLET_TYPE">
			<digest>
				trigger inlet
			</digest>
			<description>
				Signal inlet used for triggering new grains
			</description>
		</inlet>
		<inlet id="1" type="INLET_TYPE">
			<digest>
				min start position
			</digest>
			<description>
				Minimum start position value in ms
			</description>
		</inlet>
		<inlet id="2" type="INLET_TYPE">
			<digest>
				max start position
			</digest>
			<description>
				Maximum start position value in ms
			</description>
		</inlet>
		<inlet id="3" type="INLET_TYPE">
			<digest>
				min grain length
			</digest>
			<description>
				Minimum grain length in ms
			</description>
		</inlet>
		<inlet id="4" type="INLET_TYPE">
			<digest>
				max grain length
			</digest>
			<description>
				Maximum grain length in ms
			</description>
		</inlet>
		<inlet id="5" type="INLET_TYPE">
			<digest>
				min pitch
			</digest>
			<description>
				Minimum pitch value
			</description>
		</inlet>
		<inlet id="6" type="INLET_TYPE">
			<digest>
				max pitch
			</digest>
			<description>
				Maximum pitch value
			</description>
		</inlet>
		<inlet id="7" type="INLET_TYPE">
			<digest>
				min pan
			</digest>
			<description>
				Minimum pan value
			</description>
		</inlet>
		<inlet id="8" type="INLET_TYPE">
			<digest>
				max pan
			</digest>
			<description>
				Maximum pan value
			</description>
		</inlet>
		<inlet id="9" type="INLET_TYPE">
			<digest>
				min gain
			</digest>
			<description>
				Minimum gain value
			</description>
		</inlet>
		<inlet id="10" type="INLET_TYPE">
			<digest>
				max gain
			</digest>
			<description>
				Maximum gain value
			</description>
		</inlet>
	</inletlist>
	<!--OUTLETS-->
	<outletlist>
		<outlet id="0" type="OUTLET_TYPE">
			<digest>
				Signal output left
			</digest>
			<description>
			</description>
		</outlet>
		<outlet id="1" type="OUTLET_TYPE">
			<digest>
				Signal output right
			</digest>
			<description>
			</description>
		</outlet>
		<outlet id="2" type="OUTLET_TYPE">
			<digest>
				Number of currently playing grains
			</digest>
			<description>
			</description>
		</outlet>
	</outletlist>
	<!--ARGUMENTS-->
	<objarglist>
		<objarg name="sample" optional="0" type="symbol">
			<digest>
				Sample buffer reference
			</digest>
			<description>
				Name of the buffer~ used for playback.
			</description>
		</objarg>
		<objarg name="window" optional="0" type="symbol">
			<digest>
				Window buffer reference
			</digest>
			<description>
				Name of the buffer~ used for the grain window.
			</description>
		</objarg>
		<objarg name="cloud-size" optional="0" type="int">
			<digest>
				Maximum size of grain cloud
			</digest>
			<description>
				Maximum number of overlapping grains.
			</description>
		</objarg>
		<objarg name="grain-length" optional="0" type="int">
			<digest>
				Maximum grain length
			</digest>
			<description>
				Maximum length of grains in ms.
			</description>
		</objarg>
	</objarglist>
	<!--MESSAGES-->
	<methodlist>
		<method name="set">
			<arglist>
				<arg name="sample buffer" optional="0" type="symbol" />
				<arg name="window buffer" optional="0" type="symbol" />
			</arglist>
			<digest>
				Sets the buffer references
			</digest>
			<description>
				Specifies the sample and window buffer references.
			</description>
		</method>
		<method name="cloudsize">
			<arglist>
				<arg name="grain cloud size" optional="0" type="int" />
			</arglist>
			<digest>
				Maximum size of grain cloud
			</digest>
			<description>
				Specifies the new maximum size of the grain cloud and resizes allocated memory. The supplied value must be a positive integer.
			</description>
		</method>
		<method name="grainlength">
			<arglist>
				<arg name="max. grain length" optional="0" type="int" />
			</arglist>
			<digest>
				Maximum grain length
			</digest>
			<description>
				Specifies the new maximum grain length and resizes allocated memory. The supplied value must be a positive integer.
			</description>
		</method>
		<method name="pitchlist">
			<arglist>
				<arg name="pitch list" optional="0" type="float" />
			</arglist>
			<digest>
				List of pitch values
			</digest>
			<description>
				When provided, the object randomly selects pitch values from the list and the object inlets for minimum and maximum pitch will be ignored. Supply a single zero value to deactivate pitch list processing.
			</description>
		</method>
	</methodlist>
	<!--ATTRIBUTES-->
	<attributelist>
		<attribute name="stereo" get="1" set="1" type="int" size="1" value="0">
			<digest>
				Multi-channel playback on/off
			</digest>
			<description>
				Activates and deactivates stereo playback of multi-channel files loaded into the sample buffer.
			</description>
			<attributelist>
				<attribute name="default" get="1" set="1" type="int" size="1" value="0" />
			</attributelist>
		</attribute>
		<attribute name="w_interp" get="1" set="1" type="int" size="1" value="0">
			<digest>
				Window interpolation on/off
			</digest>
			<description>
				Activates and deactivates window sample interpolation.
			</description>
			<attributelist>
				<attribute name="default" get="1" set="1" type="int" size="1" value="0" />
			</attributelist>
		</attribute>
		<attribute name="s_interp" get="1" set="1" type="int" size="1" value="1">
			<digest>
				Sample interpolation on/off
			</digest>
			<description>
				Activates and deactivates buffer sample interpolation.
			</description>
			<attributelist>
				<attribute name="default" get="1" set="1" type="int" size="1" value="1" />
			</attributelist>
		</attribute>
		<attribute name="zero" get="1" set="1" type="int" size="1" value="0">
			<digest>
				Zero crossing trigger mode on/off
			</digest>
			<description>
				Activates and deactivates zero crossing trigger mode.
			</description>
			<attributelist>
				<attribute name="default" get="1" set="1" type="int" size="1" value="0" />
			</attributelist>
		</attribute>
		<attribute name="reverse" get="1" set="1" type="symbol" size="1">
			<digest>
				Reverse grain playback mode
			</digest>
			<description>
				Sets the reverse grain playback mode.
			</description>
			<attributelist>
				<attribute name="default" get="1" set="1" type="symbol" size="1" value="off" />
				<attribute name="enumvals" get="1" set="1" type="atom" size="4">
					<enumlist>
						<enum name="off">
							<digest>
								Forward grain playback
							</digest>
							<description>
								TEXT_HERE
							</description>
						</enum>
						<enum name="on">
							<digest>
								Reverse grain playback
							</digest>
							<description>
								TEXT_HERE
							</description>
						</enum>
						<enum name="random">
							<digest>
								Randomly alternating between reverse and forward grain playback
							</digest>
							<description>
								TEXT_HERE
							</description>
						</enum>
						<enum name="direction">
							<digest>
								Forward playback when value for min/max offset increasing, reverse playback when value for min/max offset decreasing
							</digest>
							<description>
								TEXT_HERE
							</description>
						</enum>
					</enumlist>
				</attribute>
				<attribute name="style" get="1" set="1" type="symbol" size="1" value="enum" />
			</attributelist>
		</attribute>
	</attributelist>
	<misc name="Output">
		<entry name="signal outlet 1">
			<description>
				Signal outlet for left channel.
			</description>
		</entry>
		<entry name="signal outlet 2">
			<description>
				Signal outlet for right channel.
			</description>
		</entry>
		<entry name="current grain count">
			<description>
				Number of currently playing grains.
			</description>
		</entry>
	</misc>
</c74object>
